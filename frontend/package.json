{
  "name": "typescript-react-redux-boilerplate",
  "version": "1.0.0",
  "private": true,
  "description": "A frontend boilerplate with React, Redux and Typescript",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "pretest:cov": "npm run lint",
    "test:cov": "jest --coverage",
    "start": "webpack-dev-server --mode development --hot --progress --color --port 3000 --open",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "build:prod": "webpack -p --progress --colors",
    "build": "webpack --mode development --progress --colors",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\""
  },
  "license": "MIT",
  "devDependencies": {
    "@nestjs/testing": "^6.11.11",
    "@types/express": "^4.17.3",
    "@types/jest": "^24.9.1",
    "@types/joi": "^14.3.4",
    "@types/node": "^11.15.9",
    "@types/supertest": "^2.0.8",
    "jest": "^26.6.3",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "rimraf": "^2.6.2",
    "standard-version": "^9.0.0",
    "supertest": "^3.4.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "5.11.0",
    "typescript": "^3.8.3",
    "webpack": "^5.11.1",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^6.11.11",
    "@nestjs/core": "^6.11.11",
    "@nestjs/cqrs": "^6.1.0",
    "@nestjs/jwt": "^6.0.0",
    "@nestjs/passport": "^6.2.0",
    "@nestjs/platform-express": "^6.11.11",
    "@nestjs/swagger": "^4.7.9",
    "@nestjs/typeorm": "^6.3.4",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/winston": "^2.4.4",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "cli-color": "^1.3.0",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "glee-jwks-rsa": "^1.1.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "moment-timezone": "^0.5.28",
    "passport": "^0.4.1",
    "passport-auth0": "^1.3.2",
    "passport-jwt": "^4.0.0",
    "pg": "^7.9.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.24",
    "uuid": "^3.4.0",
    "winston-loggly-bulk": "^2.0.3",
    "winston-slack-webhook": "^0.1.6"
  },
  "jest": {
    "rootDir": "src",
    "coverageDirectory": "../coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/app/**/*.(ts|tsx|js)",
      "!<rootDir>/app/index.tsx",
      "!<rootDir>/app/containers/App/*",
      "!<rootDir>/app/(reducers|components|store|services)/index.ts",
      "!<rootDir>/app/(middleware|actions|containers|models|utils)/*",
      "!<rootDir>/app/components/(Error|Callback)/*",
      "!<rootDir>/app/services/(httpService).ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "setupFiles": [
      "raf/polyfill"
    ],
    "testRegex": ".*(spec|test)\\.(ts|tsx|js)$",
    "setupTestFrameworkScriptFile": "<rootDir>/setupTests.ts",
    "snapshotSerializers": [
      "enzyme-to-json"
    ],
    "moduleNameMapper": {
      "^app/(.*)$": "<rootDir>/app/$1",
      "\\.(css|less)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "homepage": "http://mywebsite.com/relativepath"
}
